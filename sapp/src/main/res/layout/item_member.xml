<?xml version="1.0" encoding="utf-8"?>



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:id="@+id/source_lay"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_height="70dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/title_icon1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="3dp"
                android:transitionName="profile"
                android:elevation="20dp"

                android:src="@drawable/staff"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"/>
            <ImageView
                android:id="@+id/fp_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"

                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/fp_records">

            </ImageView>
            <!--</android.support.v7.widget.CardView>-->
            <TextView
                android:id="@+id/no_of_workers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/title_icon1"

                android:textStyle="bold"

                android:layout_toRightOf="@+id/title_icon1"
                android:text="Id number : " />
    <TextView
                android:id="@+id/idno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/no_of_workers_label"
android:textSize="12dp"
                android:textStyle="italic"
              android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@+id/no_of_workers_label"
                android:text="1,000" />

            <TextView
                android:id="@+id/employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/title_icon1"
                android:text="Name :" />


        </RelativeLayout>


